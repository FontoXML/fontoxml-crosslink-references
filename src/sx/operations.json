{
	"reference-document-insert-modal": {
		"flags": [
			"exclude-from-operations-list"
		],
		"steps": [
			{
				"type": "modal/DocumentBrowser",
				"options": {
					"templateUrl": "fontoxml-ui-asset-browser/ui/document-browser-modal-template.html",
					"windowClass": "modal-xl"
				},
				"data": {
					"modalTitle": "Insert cross link",
					"modalSubtitle": "Refer to a piece of content in this or another document",
					"referenceTargetNodeFilter": "browseDocumentReferenceTargetNodeFilter",

					"referenceTypeName": "document"
				}
			}
		]
	},
	"reference-document-edit-modal": {
		"flags": [
			"exclude-from-operations-list"
		],
		"steps": [
			{
				"type": "modal/DocumentBrowser",
				"options": {
					"templateUrl": "fontoxml-ui-asset-browser/ui/document-browser-modal-template.html",
					"windowClass": "modal-xl"
				},
				"data": {
					"modalTitle": "Edit cross link",
					"modalSubtitle": "Refer to a piece of content in this or another document",
					"modalPrimaryButtonLabel": "Save",
					"referenceTargetNodeFilter": "browseDocumentReferenceTargetNodeFilter",

					"contextNodeId": "{{contextNodeId}}",
					"referenceTypeName": "document"
				}
			}
