ui-modal(
	id="preview-document-modal"
	on-enter-key="uiDocumentPreviewModal.close()"
	on-escape-key="uiDocumentPreviewModal.close()")
	ui-modal-header(
		title="Preview link"
		icon="link")

	ui-modal-body
		ui-document-preview(
			reference="uiDocumentPreviewModal.reference",
			referrer-document-id="{{uiDocumentPreviewModal.referrerDocumentId}}"
			target-spec="uiDocumentPreviewModal.targetSpec"
			highlight-node="true")

	ui-modal-footer
		ui-button-bar
			ui-button-bar-region
				ui-button(
					type="primary"
					label="Close"
					click="uiDocumentPreviewModal.close()")
