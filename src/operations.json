{
	"reference-document-insert-modal": {
		"steps": [
			{
				"type": "operation/open-document-browser",
				"data": {
					"modalTitle": "Cross link",
					"modalSubtitle": "The cross link will refer to this content"
				}
			}
		]
	},
	"reference-document-edit-modal": {
		"steps": [
			{
				"type": "operation/open-document-browser",
				"data": {
					"modalTitle": "Edit cross link",
					"modalSubtitle": "Select the content you want this cross link to refer to",
					"modalPrimaryButtonLabel": "Save",
					"contextNodeId": "{{contextNodeId}}"
				}
			}
		]
	},
	"open-node-preview-modal": {
		"initialData": {
			"modalTitle": "t__Preview",
			"modalIcon": null,
			"modalCancelButtonLabel": "t__Close"
		},
		"getStateSteps": [],
		"steps": {
			"type": "modal/NodePreviewModal",
			"options": {
				"controller": "NodePreviewModalBridgeController",
				"templateUrl": "fontoxml-references-document/bridge/node-preview-modal-bridge-template.html"
			},
			"data": {
				"contextNodeId": "{{contextNodeId}}",
				"highlightNodeId": "{{highlightNodeId}}"
			}
		}
	},
	"open-node-preview-modal-for-reference": {
		"initialData": {
			"modalTitle": "t__Preview link",
			"modalIcon": "link"
		},
		"getStateSteps": [],
		"steps": [
			{
				"type": "transform/setTargetNodeIdForDocumentReference",
				"data": {
					"reference": "{{reference}}",
					"referrerDocumentId": "{{referrerDocumentId}}"
				}
			},
			{
				"type": "transform/setDocumentNodeIdForContextNodeId",
				"data": {
					"contextNodeId": "{{targetNodeId}}"
				}
			},
			{
				"type": "operation/open-node-preview-modal",
				"data": {
					"contextNodeId": "{{documentNodeId}}",
					"highlightNodeId": "{{targetNodeId}}"
				}
			}
		]
	}
}
